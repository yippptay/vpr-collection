"default":"#fff"
},
{
"type": "color",
"id": "price_desc_color",
"label": "Price Desc Color",
"default":"#f12a43"
},
{
"type": "color",
"id": "price_color",
"label": "Price Color",
"default":"#f12a43"
}
]
}
],
"presets": [
{
"name": "Cms Blockbanner",
"category": "Image"
}
]
}
{% endschema %}