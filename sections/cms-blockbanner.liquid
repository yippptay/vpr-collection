{% if section.blocks.size > 0 %}
<div class="cmsblockbanner" {% if settings.enable_animation != blank %} data-aos="fade-up" {% endif %}>
  <div class="container">
    <div class="row">
      <div class="ttbanner-wrap owl-carousel">
        {% for block in section.blocks %}
        {% if block.settings.banner_image1 != blank %}
        <div id="blockbanner-{{ block.id }}" class="banner col-sm-12">
          <a href="{% if block.settings.banner_link1 != blank %} {{block.settings.banner_link1 }}{% else %}#{% endif %}">
            {% if block.settings.banner_image1 != blank %}
            <img loading="lazy" src="{{  block.settings.banner_image1 | img_url: "master" }}" alt="banner-image" />
            {% endif %}
            <div class="banner-content {{ block.settings.text_position }}">
              <div class="banner-inner">
                {% if block.settings.desc !="" %}
                <div class="desc">{{ block.settings.desc }}</div>
                {% endif %}
                {% if block.settings.subtitle !="" %}
                <div class="subtitle">{{ block.settings.subtitle }}</div>
                {% endif %} 
                {% if block.settings.title !="" %}
                <div class="title">{{ block.settings.title }}</div>
                {% endif %}              
                {% if block.settings.price_desc != blank %}
                <div class="price_desc">
                  {{ block.settings.price_desc }}
                  {% if block.settings.price != blank %}
                  <span class="price">{{ block.settings.price }}</span>  
                  {% endif %}
                </div>  
                {% endif %}
              </div>
            </div> 
          </a>
          <style>
            .cmsblockbanner .banner#blockbanner-{{ block.id }} .banner-content .title,.cmsblockbanner .banner#blockbanner-{{ block.id }} .banner-content .subtitle{color:{{ block.settings.title_color }};}
            .cmsblockbanner .ttbanner-wrap #blockbanner-{{ block.id }} .banner-content .desc{color:{{ block.settings.desc_color }};background:{{ block.settings.desc_bgcolor }};}
            .cmsblockbanner .ttbanner-wrap #blockbanner-{{ block.id }} .banner-content .price_desc{color:{{ block.settings.price_desc_color }};}
            .cmsblockbanner .ttbanner-wrap #blockbanner-{{ block.id }} .banner-content .price{color:{{ block.settings.price_color }};}
          </style>
        </div>
        {% endif %}  
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endif %}
