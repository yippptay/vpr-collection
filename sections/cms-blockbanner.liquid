"id": "banner_image1",
"label": "Image"
},
{
"type": "url",
"id": "banner_link1",
"label": "Banner link"
},
{
"type": "text",
"id": "title",
"label": "Title",
"default":"Kid's Corner"
},
{
"type": "text",
"id": "subtitle",
"label": "Sub Title",
"default":"Kid's Corner"
},
{
"type": "text",
"id": "desc",
"label": "desc",
"default":"Kid's Corner"
},
{
"type": "text",
"id": "price_desc",
"label": "Price desc",
"default":"Kid's Corner"
},
{
"type": "text",
"id": "price",
"label": "price",
"default":"Kid's Corner"
},
{
"type": "select",
"id": "text_position",
"label": "Text Position",
"options": [
{
"value": "left",
"label": "left"
},
{
"value": "right",
"label": "Right"
},
{
"value": "center",
"label": "Center"
}
]
},
{
"type": "color",
"id": "title_color",
"label": "Title Color",
"default":"#f12a43"
},	
{
"type": "color",
"id": "desc_color",
"label": "Desc Color",
"default":"#f12a43"
},
{
"type": "color",
"id": "desc_bgcolor",
